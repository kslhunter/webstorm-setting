<keymap version="1" name="Windows copy" parent="$default">
  <action id="MoveTabDown">
    <keyboard-shortcut first-keystroke="alt semicolon" />
  </action>
  <action id="MoveTabRight">
    <keyboard-shortcut first-keystroke="ctrl semicolon" />
  </action>
  <action id="SplitHorizontally">
    <keyboard-shortcut first-keystroke="shift alt semicolon" />
  </action>
  <action id="SplitVertically">
    <keyboard-shortcut first-keystroke="shift ctrl semicolon" />
  </action>
</keymap>